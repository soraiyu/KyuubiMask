<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PRIVACY: No INTERNET permission - this app works completely offline -->

    <!-- Android 11+ package visibility: declare which apps we query via PackageManager.
         Without this, getApplicationInfo() and getLaunchIntentForPackage() silently fail
         for these packages (NameNotFoundException / null), causing the notification title
         to fall back to "App" and tapping a masked notification to do nothing. -->
    <queries>
        <package android:name="com.Slack" />
        <package android:name="com.discord" />
        <package android:name="com.whatsapp" />
        <package android:name="jp.naver.line.android" />
    </queries>

    <!-- Required for notification access -->
    
    <!-- Required to post notifications on Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Required for notification vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Required to run as foreground service to prevent Android from killing the app -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    
    <application
        android:name=".KyuubiMaskApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KyuubiMask"
        tools:targetApi="34">

        <!-- Main Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.KyuubiMask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Notification Listener Service -->
        <!-- 
            Foreground service type 'specialUse' is used because:
            - NotificationListenerService is a system-bound service that doesn't fit standard types
            - It's not media playback, location, data sync, or other predefined categories
            - It provides privacy protection by masking notification content
            - Android 14+ requires specialUse services to declare their purpose via metadata
        -->
        <service
            android:name=".NotificationMaskService"
            android:exported="true"
            android:foregroundServiceType="specialUse"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
            
            <!-- Required metadata for special use foreground service (Android 14+) -->
            <property 
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Notification privacy protection" />
        </service>

        <!-- Quick Settings Tile for one-tap masking toggle -->
        <service
            android:name=".MaskToggleTileService"
            android:exported="true"
            android:icon="@drawable/ic_mask_on"
            android:label="@string/tile_label_masking_on"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>

</manifest>
