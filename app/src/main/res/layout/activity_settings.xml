<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_status"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_checking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Enable Toggle Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_enable_masking"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_enable_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb"
                    app:trackTint="@color/switch_track" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Permission Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_grant_permission"
            android:textColor="@color/text_on_primary"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Apps to Mask Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_apps_to_mask"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Messaging Apps -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTelegram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LINE"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signal"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDiscord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discord"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <!-- Email Apps -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipK9Mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K-9 Mail"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <!-- Business Apps -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slack"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teams"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipZoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notion"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipJira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jira"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background"
                app:checkedIconTint="@color/primary" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Debug Log Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_debug_log"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearLog"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/btn_clear"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvDebugLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:padding="12dp"
                android:text="@string/debug_waiting"
                android:textColor="#88FF88"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>

        <!-- Privacy Notice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_notice"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_privacy"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</ScrollView>
